{
  "analysis": {
    "char_filter": {
      "quotes": {
        "type": "mapping",
        "mappings": [
          "\\u0091=>",
          "\\u0092=>",
          "\\u2018=>",
          "\\u2019=>",
          "\\u201B=>",
          "\\u0027=>"
        ]
      }
    },
    "filter": {
      "shingles": {
        "type": "shingle",
        "max_shingle_size": "4",
        "token_separator": ""
      }
    },
    "analyzer": {
      "crossword": {
        "tokenizer": "standard",
        "filter": ["standard", "lowercase", "asciifolding", "shingles"],
        "char_filter": ["quotes"]
      }
    }
  }
}
